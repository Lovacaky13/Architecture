
<section>
  <div class="container">
    <div class="row d-flex justify-content-between ">
      {{#each affdbarticle}}
      <div class="col-md-4 p-3 ">
        <div class="card" style="width: 18rem;">
          <img src="{{ image }}" class="card-img-top" alt="...">
          <div class="card-body">
            <h5 class="card-title"> {{ title }} </h5>
            <p class="card-text">Some quick example text to build on the card title and make up the bulk of the card's
              content.
            </p>
            <p>Publi√© le {{ moment createDate format="DD-MM-YYYY"}}</p>
          </div>
          <div class="row">
            <div class="col-md-6">

              {{!-- Button trigger modal modifier --}}


              <button type="submit" class="btn btn-warning" data-toggle="modal" data-target="#modalModifArticle{{_id}}">
                edit</button>

            </div>
            <div class="col-md-6">
              <form action="/Article/{{_id}}/?_method=DELETE" method="post">
                <button type="submit" class="btn btn-danger">Delete</button>
              </form>
            </div>
          </div>

          {{!-- Modal Btn Modifier --}}
          <div class="modal fade" id="modalModifArticle{{_id}}" tabindex="-1" role="dialog"
            aria-labelledby="modalModifArticle" aria-hidden="true">
            <div class="modal-dialog" role="document">
              <div class="modal-content">
                <div class="modal-header">

                  <form action="/Article/{{_id}}?_method=PUT" method="post" enctype="multipart/form-data">
                    <div class="modal-body">

                      <label for="formGroupExampleInput">Titre : </label>
                      <input type="text" class="form-control" name='title' id="formGroupExampleInput"
                        value="{{this.title}}">

                      <div class="form-group">
                        <label>Cover</label>
                        <input type="file" class="form-control" name='image'>
                      </div>

                      <div class="modal-footer">
                        <div class="row">
                          <div class="col-md-6">
                            <button type="button" class="btn btn-warning m-3" data-dismiss="modal">Annuler</button>
                          </div>
                          <div class="col-md-6">
                            <button type="submit" class="btn btn-danger m-3">Confirmer</button>
                          </div>
                        </div>
                      </div>
                    </div>
                  </form>

                </div>
              </div>
            </div>
          </div>
          {{!-- fin Modal Btn Modifier --}}
        </div>
      </div>
      {{/each }}
    </div>
  </div>
</section>



